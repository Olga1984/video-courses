{
  "extends": ["tslint:recommended","tslint-angular"],
  "rules": {
    "align": [
      true,
      "statements"
    ],
    "array-type": [
      true,
      "generic"
    ],
    "ban": false,
    "import-spacing": false,
    "indent": [
      true,
      "spaces",
      4
    ],
    "max-classes-per-file": false,
    "member-ordering": false,
    "no-any": false,
    "no-console": [
      false,
      "log",
      "info",
      "debug",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-constructor-vars": false,
    "no-default-export": true,
    "no-duplicate-variable": true,
    "no-inferrable-types": false,
    "no-require-imports": true,
    "no-var-requires": true,
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": true,
    "switch-default": false,
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "typedef": [
      true,
      "call-signature",
      "property-declaration"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ],
    "max-line-length": [
      true,
      {
        "limit": 140,
        "ignore-pattern": "^import"
      }
    ],
    "interface-over-type-literal": false,
    "directive-selector": [
      true,
      "attribute",
      [
        "ng",
        "app"
      ],
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      [
        "app"
      ],
      "kebab-case"
    ],
    "ordered-imports": [
      false
    ],
    "curly": [
      true,
      "ignore-same-line"
    ]
  },
  "linterOptions": {
    "exclude": [
      "**/*.stub.ts",
      "*.json",
      "**/*.json"
    ]
  }
}
